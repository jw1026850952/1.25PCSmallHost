    <Grid x:Name="PartitionPointSet">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <!--<Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>-->
        <StackPanel
            VerticalAlignment="Center">
            <ComboBox 
                x:Name="cbxSetPartitionPoint"
                Height="50" Width="120"
                Margin="5" FontSize="14"
                BorderBrush="#FFF"
                materialDesign:HintAssist.Hint="报警器"
                materialDesign:HintAssist.Foreground="#FFFFFF"
                materialDesign:HintAssist.Background="#0F1629"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
            <ComboBox 
                x:Name="cbxSetEscapeLine"
                Width="120" Height="50"
                Margin="5"
                FontSize="14"
                BorderBrush="#FFF"
                materialDesign:HintAssist.Hint="所在路线"
                materialDesign:HintAssist.Foreground="#FFFFFF"
                materialDesign:HintAssist.Background="#0F1629"
                SelectionChanged="LineName_SelectionChanged"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
        </StackPanel>
        <StackPanel 
            Grid.Column="1"
            VerticalAlignment="Center">
            <Button 
                Height="40" Width="100" 
                Margin="5"
                Content="绑定" FontSize="18"
                Focusable="False" 
                Click="btnBinding_Click"/>
            <Button 
                Height="40" Width="100"
                Margin="5"
                Content="确定"
                FontSize="18" 
                Focusable="False" 
                Click="btnConfirm_Click"/>
            <Button 
                Height="40" Width="100"
                Margin="5"
                Content="移除"
                FontSize="18" 
                Focusable="False" 
                Click="btnRemove_Click"/>
        </StackPanel>
    </Grid>
    
