            <Button Height="80" Width="615" Content="SPACE" Margin="165,-80,0,0" Style="{DynamicResource ButtonStyle_Alphabet}" Click="Alphabet_Click"/>
            <Button Height="80" Width="80" Content="&lt;" Margin="780,-80,0,0" Style="{DynamicResource ButtonStyle_Alphabet}" Click="Alphabet_Click"/>
            <Button Height="80" Width="80" Content="&gt;" Margin="860,-80,0,0" Style="{DynamicResource ButtonStyle_Alphabet}" Click="Alphabet_Click"/>
