<Window x:Class="PCSmallHost.UserWindow.ControlPartitionPoint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ControlPartitionPoint" Height="105" Width="150" Background="Transparent" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False">
    <Viewbox Stretch="Fill">
        <Canvas Height="105" Width="150" Background="#0F1629">
            <Label Height="40" Width="70" Canvas.Top="5" Content="报警点" FontSize="20" Foreground="#FFFFFF"/>
            <ComboBox Name="cbxSetPartitionPoint" Height="40" Width="60" Background="White" Canvas.Top="5" Canvas.Left="80" FontSize="20"></ComboBox>
            <Button Height="40" Width="60" Content="确定" Canvas.Top="60" Canvas.Left="5" FontSize="14" Focusable="False" Click="btnConfirm_Click"></Button>
            <Button Height="40" Width="60" Content="移除" Canvas.Top="60" Canvas.Left="80" FontSize="14" Focusable="False" Click="btnRemove_Click"></Button>
        </Canvas>
    </Viewbox>
</Window>
